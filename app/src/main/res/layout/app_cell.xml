<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/app_cell_elevation"
    android:layout_margin="@dimen/app_cell_margin"
    android:background="@drawable/cell_shape">

    <ImageView
        android:id="@+id/app_image_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_cell_image_margin"
        android:layout_marginEnd="@dimen/app_cell_image_margin"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_cell_image_content_description" />

    <TextView
        android:id="@+id/app_name_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_cell_name_margin"
        android:layout_marginEnd="@dimen/app_cell_name_margin"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/app_cell_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_image_cell"/>
</androidx.constraintlayout.widget.ConstraintLayout>